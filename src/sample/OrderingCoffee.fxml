         </children>
      </HBox>
      <ComboBox fx:id="sizeCombobox" layoutX="14.0" layoutY="42.0" onAction="#handleSizeSelection" prefWidth="150.0" promptText="Coffee Size" />
      <ComboBox fx:id="countCombobox" layoutX="229.0" layoutY="42.0" onAction="#handleCountSelection" prefWidth="150.0" promptText="Count" />
      <Button fx:id="addToOrderButton" layoutX="223.0" layoutY="138.0" mnemonicParsing="false" onAction="#handleAddToOrder" prefHeight="60.0" prefWidth="162.0" text="Add to Order" />
      <Label layoutX="14.0" layoutY="155.0" prefHeight="17.0" prefWidth="59.0" text="Subtotal:" />
      <Label fx:id="subTotalLabel" layoutX="73.0" layoutY="155.0" prefHeight="17.0" prefWidth="87.0" />
      <Label layoutX="14.0" layoutY="81.0" text="Coffee Add Ins" />
   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="213.0" prefWidth="399.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.OrderingCoffeeController">
   <children>
      <HBox layoutX="15.0" layoutY="106.0" prefHeight="25.0" prefWidth="383.0">
         <children>
            <CheckBox fx:id="creamCheckBox" mnemonicParsing="false" onAction="#handleCreamCheckBoxSelection" prefHeight="17.0" prefWidth="65.0" text="Cream" />
            <CheckBox fx:id="syrupCheckBox" mnemonicParsing="false" onAction="#handleSyrupCheckBoxSelection" prefHeight="17.0" prefWidth="59.0" text="Syrup" />
            <CheckBox fx:id="milkCheckBox" mnemonicParsing="false" onAction="#handleMilkCheckBoxSelection" prefHeight="17.0" prefWidth="59.0" text="Milk" />
            <CheckBox fx:id="caramelCheckBox" mnemonicParsing="false" onAction="#handleCaramelCheckBoxSelection" prefHeight="17.0" prefWidth="74.0" text="Caramel" />
